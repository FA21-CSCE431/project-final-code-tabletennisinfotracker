<div class="d-flex justify-content-center flex-column align-items-center" style="height: 100%">
  <h1>Players</h1>

  <div>
  <table class="table table-striped table-bordered table-responsive">
    <thead class="thead-light">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Wins</th>
        <th scope="col">Played</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td>
            <a href="/players/<%= player.id%>"">
              <%= bootstrap_icon  "search", width: 36, height: 36 %>
            </a>
            <%= link_to player.name, player %>
          </td>
          <td><%= player.wins %></td>
          <td><%= player.played %></td>
          <td>
            <div class="d-flex">
              <a href=<%= edit_player_path(player)%>>
                <%= bootstrap_icon  "pen-fill", width: 36, height: 36 %>
              </a>
              <br><br>
              <a data-method="delete" href="/players/<%= player.id%>" data-confirm="Are you sure?">
                <%= bootstrap_icon  "trash-fill", width: 36, height: 36 %>
              </a>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  <br>

  <%= button_to "Add a New Player", new_player_path, class: 'btn btn-secondary', :method => :get%>

</div>

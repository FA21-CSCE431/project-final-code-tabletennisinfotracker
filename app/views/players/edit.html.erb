<% if Player.allowed_to_show?(current_admin, @player) %>
  <div class="container">
    <div class="container page-top-margin show-container">
      <%= render 'back'%>
    </div>
    <div class="container text-center">
      <h1>
        Editing
        <%= @player.name %>
      </h1>
    </div>

    <div class="container form-bottom-padding justify-content-center show-container">
      <%= render 'form', player: @player %>
    </div>

  </div>
<% else %>
  <div class="d-flex justify-content-center flex-column align-items-center" style="height: 100%">
    <h1 style="color: #ff0000">
      PERMISSION DENIED
    </h1>
    <h2>You do not have the permission to acess this page!</h2>
  </div>
<% end %>

<div class="container">

  <div class="container page-top-margin">
    <%= render 'back'%>
  </div>
  <br>
  <div class="d-flex form-bottom-padding" style="justify-content: center">
    <form>
      <div class='align-self-center' style="text-align: center">
        <h1><%= @player.name %></h1>
        <div class="row" style="justify-content: center">
          <div class="form-group col-md-2">
            <label for="winsInput" class="form-label">Wins</label>
            <input type="number-field" id="winsInput" class="form-control" placeholder=<%= @player.wins %> disabled="disabled">
          </div>
          <div class="form-group col-md-2">
            <label for="playedInput" class="form-label">Losses</label>
            <input type="number-field" id="playedInput" class="form-control" placeholder=<%= @player.losses %> disabled="disabled">
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="strengthsInput" class="form-label">Strengths</label>
        <textarea type="text" id="strengthsInput" class="form-control" disabled="disabled" readonly="readonly"><%= @player.strengths%></textarea>
      </div>

      <div class="form-group">
        <label for="weaknessesInput" class="form-label">Weakensses</label>
        <textarea id="weaknessesInput" class="form-control" disabled="disabled" readonly="readonly"><%= @player.weaknesses %></textarea>
      </div>

      <div class="form-group">
        <label for="additionalInfoInput" class="form-label">Additional Info.</label>
        <textarea id="additonalInfoInput" class="form-control" disabled="disabled" readonly="readonly"><%= @player.additional_info %></textarea>
      </div>
      <%# </br>
      <%= link_to 'Edit', edit_player_path(@player), class: 'btn btn-secondary' %>
      </form>
    </div>

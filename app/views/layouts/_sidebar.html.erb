                        <a href="/permission_users" class="nav_link">
                            <i class="bx bx-group nav_icon"></i>
                            <span class="nav_name">Manage Users</span>
                        </a>
                    <% end %>
                </div>
                <a href=<%= destroy_admin_session_path %> class="nav_link">

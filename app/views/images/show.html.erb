<div class="d-flex flex-column" style="height: 100%">
  <div class="container page-top-margin">
    <%= render 'back'%>
  </div>
  <div class="container center-text">
    <h1>
      New Image
    </h1>
    <br/>
  </div>
  <div class="d-flex form-bottom-padding" style="justify-content: center;">
    <div class="align-self-center">
      <% if @image.img.attached? %>
        <div class="align-items-center container">
          <%= image_tag(@image.img, class: "show-image")%>
        </div>
        <br/>
      <% end %>

      <div class="form-group">
        <label class="form-label">
          <strong>Caption</strong>
        </label>
        <br/>
        <p><%= @image.caption %></p>
      </div>

      <br/>
      <% if current_admin.admin? %>
        <div class="container" style="text-align: center;">
          <form class="button_to" method="get" action=<%= edit_image_path(@image) %> style="display: inline-block">
            <button class="btn" id="edit-img-<%= @image.id %>" style="text-decoration: underline; color: #0d6efd;">Edit</button>
          </form>
          |
          <a data-method="delete" href=<%= image_path(@image) %> data-confirm="Are you sure?" id="delete-img-<%= @image.id %>">
            Delete
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
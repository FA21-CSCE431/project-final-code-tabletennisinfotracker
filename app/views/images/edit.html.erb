<% if Admin.current_user_admin?(current_admin)%>
  <div class="d-flex flex-column" style="height: 100%">
    <div class="container page-top-margin">
      <%= render 'back'%>
    </div>
    <div class="container center-text">
      <h1>
        Update Image
      </h1>
    </div>
    <div class="d-flex form-bottom-padding" style="justify-content: center">
      <br/>
      <%= render 'edit_form', image: @image %>
    </div>
  </div>
<% else %>
  <div class="d-flex justify-content-center flex-column align-items-center" style="height: 100%">
    <h1 style="color: #ff0000">
      PERMISSION DENIED
    </h1>
    <h2>You do not have the permission to acess this page!</h2>
  </div>
<% end %>
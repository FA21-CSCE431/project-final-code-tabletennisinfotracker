<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: 'form-label'  %>
    <%= form.text_field :name, class: 'form-control', rows: '3', placeholder: 'Enter Event Name'%>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', rows: '3', placeholder: 'Enter Description'%>
  </div>

  <div class="form-group">
    <%= form.label :location, class: 'form-label' %>
    <%= form.text_field :location, class: 'form-control', rows: '3', placeholder: 'Enter Location'%>
  </div>

  <div class="form-group">
    <%= form.label :time, class: 'form-label' %>
    <%= form.datetime_local_field :time, class: 'form-control', rows: '3'%>
  </div>

  <br>

  <button type='submit' class='btn btn-secondary'>Submit</button>
  
<% end %>

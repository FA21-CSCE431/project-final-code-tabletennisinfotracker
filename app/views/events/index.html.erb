<div class="d-flex justify-content-center flex-column align-items-center" style="padding-top: 80px;">
  <h1>Events</h1>
  <% if Admin.current_user_admin?(current_admin)%>
    <%= button_to "New Event", new_event_path, class: 'btn btn-secondary', :method => :get, title: "New Event"%>
  <% end %>
  <br/>

  <div class="container-md">
    <table class="table table-striped table-bordered table-responsive table-font">
      <thead class="thead-light">
        <tr>
          <th scope="col" class="text-center">Name</th>
          <th scope="col" class="text-center">Location</th>
          <th scope="col" class="text-center">Time</th>
          <% if Admin.current_user_admin?(current_admin) %>
            <th scope="col" class="text-center">Actions</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr class="center-vert-hor cell-pad">
            <td>
              <form class="button_to" method="get" action=<%= event_path(event) %>>
                <button class="btn" id="event-<%= event.id %>" title="Event Name">
                  <span style="font-weight: bold"><%= event.name %></span>
                </button>
              </form>
            </td>
            <td><%= event.location %></td>
            <td><%= event.time.strftime("%b %-d, %Y %-I:%M %p %Z") %></td>
            <% if Admin.current_user_admin?(current_admin) %>
              <td>
                <div class="d-flex center-vert-hor actions" style="justify-content: center;">
                  <form class="button_to" method="get" action=<%= edit_event_path(event)%> title="Edit">
                    <button class="btn" id="edit-event-<%= event.id %>">
                      <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pencil edit" viewbox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                      </svg>
                    </button>
                  </form>
                  <br><br>
                  <a data-method="delete" href=<%= event_path(event) %> data-confirm="Are you sure?" class="delete" id="delete-event-<%= event.id %>">
                    <button class="btn" title="Delete">
                      <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-trash delete" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                      </svg>
                    </button>
                  </a>
                </div>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

  <br>

</div>
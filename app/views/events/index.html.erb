<div class="d-flex justify-content-center flex-column align-items-center" style="height: 100%"> 
  <p id="notice"><%= notice %></p>

  <div>
    <div class="container-fluid">
      <div class="row justify-content-md-around">
        <div class="col-4"></div>
        <div class="col-4 col-md-auto">
          <h1>Events</h1> 
        </div>
        <div class="col-4 float-right">
          <h1><%= button_to "New Event +", new_event_path, class: 'btn btn-secondary', :method => :get%></h1>
        </div>
      </div>
    </div>

    <table class="table table-striped table-bordered table-responsive table-font">
      <thead class="thead-light">
        <tr>
          <th><p class="text-center">Name</p></th>
          <th><p class="text-center">Location</p></th>
          <th><p class="text-center">Time</p></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr class="center-vert-hor cell-pad">
            <td><%= event.name %></td>
            <td><%= event.location %></td>
            <td><%= event.time %></td>
            <div class="d-flex center-vert-hor actions">
              <td><%= link_to 'Show', event %></td>
              <td><%= link_to 'Edit', edit_event_path(event) %></td>
              <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

  <br>

</div>
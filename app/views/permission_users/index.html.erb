<div class="d-flex justify-content-center flex-column align-items-center" style="height: 100%">
    <h1>Users</h1>

    <div>
        <table class="table table-striped table-bordered table-responsive table-font">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Permissions</th>
                    <th scope="col">ID</th>
                </tr>
            </thead>
            <tbody>
                <% @admins.each do |admin| %>
                    <tr class="center-vert-hor cell-pad">
                        <td>
                            <%= admin.full_name%>
                        </td>
                        <td>
                            <%= admin.email%>
                        </td>
                        <td>
                            <%= admin.id%>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<div class="d-flex justify-content-center flex-column align-items-center" style="height: 100%">
    <h1>Users</h1>
    <%= button_to "Add a New Permission", "/permissions", class: "btn btn-secondary", method: :get %>
    <div>
        <table class="table table-striped table-bordered table-responsive table-font">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">ID</th>
                    <th scope="col">Permissions Not Added</th>
                    <th scope="col">Permissions Added</th>
                </tr>
            </thead>
            <tbody>
                <% @admins.each do |admin| %>
                    <tr class="center-vert-hor cell-pad">
                        <td>
                            <%= admin.full_name%>
                        </td>
                        <td>
                            <%= admin.email%>
                        </td>
                        <td>
                            <%= admin.id%>
                        </td>
                        <td>
                            <% @permissions.each do |permission| %>
                                <% if not(admin.permissions.where(user_id_id: admin.id, permissions_id_id: permission.id).exists?)%> 
                                    <%= button_to permission.description, new_permission_user_path, params: { user_id: admin.id, permission_id: permission.id }, method: :get, class: 'btn btn-secondary'%>
                                <% end %>
                            <% end %>
                        </td>
                        <td>
                            <% admin.permissions.each do |admin_permission| %>
                                <button class="btn btn-secondary" onclick=<%= admin_permission.destroy%>>
                                    <%= admin_permission.inspect%>
                                </button>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <ul>
        <% @permission_users.each do |permission_user|%>
            <li><%= permission_user.inspect %></li>
        <% end%>
        
        </ul>
    </div>
</div>
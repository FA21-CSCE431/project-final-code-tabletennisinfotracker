<% if Permission.exist?(@permission) && !Permission.admin_permission?(@permission) && Admin.current_user_admin?(current_admin) %>
  <div class="container show-container">
    <div class="container page-top-margin">
      <%= render 'back'%>
    </div>
    <div class="container text-center">
      <h1>
        Editing
        <%= @permission.description%>
      </h1>
    </div>

    <div class="container form-bottom-padding justify-content-center">
      <%= render 'form', permission: @permission %>
    </div>
  </div>
<% else %>
  <div class="d-flex justify-content-center flex-column align-items-center" style="height: 100%">
    <h1 style="color: #ff0000">
      PERMISSION DENIED
    </h1>
    <h2>You do not have the permission to acess this page!</h2>
  </div>
<% end %>